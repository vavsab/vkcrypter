{
  "manifest_version": 2,
  "version": "1.0",
  "name": "VkCrypter",
  
  "content_scripts": [
    {
      "matches": ["*://vk.com/*"],
      "js": ["jquery.js", "global.js", "script.js"],
      "css": ["style.css"]
    }
  ],
  
  "background": {
    "scripts": ["aes.js", "global.js", "background.js"],
    "persistent": true
  },
  
  "permissions": [
	  "activeTab"
  ],

  "web_accessible_resources": ["lock.png"]
}